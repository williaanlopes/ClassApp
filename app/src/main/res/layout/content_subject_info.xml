<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/md_grey_300"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_subject_info">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="27dp"
        app:cardCornerRadius="2dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/professor_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sameone Name"
                android:gravity="center|left"
                android:padding="15dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="17dp"
                android:layout_marginLeft="17dp"
                android:background="@color/md_grey_300"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/professor_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3356 - 4512"
                android:padding="15dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="17dp"
                android:layout_marginLeft="17dp"
                android:background="@color/md_grey_300"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/professor_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:text="mail@mail.com"

                android:padding="15dp"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        app:cardCornerRadius="2dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="asda"
                android:textSize="16sp"
                android:textColor="@color/md_grey_600"
                android:lineSpacingExtra="2dp"
                android:layout_margin="16dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="17dp"
                android:layout_marginLeft="17dp"
                android:background="@color/md_grey_300"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:text="Laboratório 5"
                android:padding="15dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="17dp"
                android:layout_marginLeft="17dp"
                android:background="@color/md_grey_300"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/location1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:text="Laboratório 5"
                android:padding="15dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="17dp"
                android:layout_marginLeft="17dp"
                android:background="@color/md_grey_300"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/location2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:text="Laboratório 5"
                android:padding="15dp"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:layout_marginRight="17dp"-->
        <!--android:layout_marginLeft="17dp"-->
        <!--android:background="@color/md_grey_300"/>-->

</LinearLayout>
