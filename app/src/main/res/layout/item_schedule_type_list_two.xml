<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_schedule_two"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="9dp"
    android:paddingStart="9dp"
    android:paddingRight="9dp"
    android:paddingEnd="9dp"
    android:background="@color/background_2">

    <LinearLayout
        android:id="@+id/view_00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/view_01"
            android:layout_width="2dp"
            android:layout_height="25dp"
            android:layout_marginBottom="7dp"
            android:visibility="visible"
            android:background="#ababab"/>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/marker"
            android:layout_width="18dp"
            android:layout_height="18dp"
            app:srcCompat="@drawable/circle_border"/>

        <TextView
            android:id="@+id/view_02"
            android:layout_width="2dp"
            android:layout_height="25dp"
            android:layout_marginTop="7dp"
            android:background="#ababab"/>

    </LinearLayout>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/view_00"
        android:layout_toEndOf="@id/view_00"
        android:layout_margin="9dp"
        android:textColor="#878787"
        android:text="08:00"
        android:textSize="14sp"
        android:textStyle="bold"/>

    <android.support.v7.widget.CardView
        android:id="@+id/view_03"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_toEndOf="@+id/time"
        android:layout_toRightOf="@+id/time"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/peterRiver"
        app:cardCornerRadius="7dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="7dp"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/subject_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:maxLines="1"
                android:textColor="#ffffff"
                android:text="Tete"
                android:textSize="18sp"
                android:singleLine="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginEnd="5dp"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/professor_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|start"
                    android:layout_weight="1"
                    android:textColor="#c8ffffff"
                    android:text="Tete"
                    android:singleLine="true"/>

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|end"
                    android:layout_weight="1"
                    android:textColor="#c8ffffff"
                    android:text="Tete"
                    android:singleLine="true"/>

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>