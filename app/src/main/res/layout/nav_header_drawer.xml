<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/side_nav_bar"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/drawer_header_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="TODO" />

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_gravity="center|end"
        android:rotation="-15"
        app:srcCompat="@drawable/ic_mortarboard"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="9dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:gravity="bottom">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/drawer_header_user_avatar"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="start"
            android:padding="9dp"
            android:background="@drawable/oval_user_bg"
            app:srcCompat="@drawable/ic_avatar"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/drawer_header_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="@string/text_user_name"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/drawer_header_course"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textColor="@color/white"
            android:text="@string/text_course"
            android:textStyle="bold"
            android:textSize="12sp"/>

        <!--<android.support.v7.widget.AppCompatTextView-->
            <!--android:id="@+id/drawer_header_period"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="6° Período"-->
            <!--android:textSize="14sp"-->
            <!--android:textColor="@color/white"/>-->
    </LinearLayout>
</FrameLayout>
