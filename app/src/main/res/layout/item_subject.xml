<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="7dp"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/left_border">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/screen_percentage_05"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/grade_subject_name"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Teoria dos Grafos"
                android:textSize="18sp"
                android:paddingLeft="12dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="7dp"
                android:paddingRight="14dp"
                android:paddingBottom="7dp"
                android:layout_weight="1"
                android:gravity="right"
                android:orientation="horizontal"
                android:contentDescription="Status da disciplina">

<!--
                <ImageView
                    android:id="@+id/grade_status_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:background="@drawable/ic_check_default"
                    android:contentDescription="Status" />
-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Faltas: "
                    android:textSize="14sp"
                    android:textColor="@color/md_grey_500"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/grade_status_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11"
                    android:textSize="14sp"
                    android:layout_marginLeft="2dp"
                    android:textColor="@color/grade_status_approved"
                    android:textStyle="bold"/>
            </LinearLayout>

        </LinearLayout>
<!--
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="17dp"
            android:layout_marginLeft="17dp"
            android:background="@color/md_grey_300"/>
      -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="left|center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_person_default"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="Tenorio Figueiredo"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>