<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginTop="2dp"
    android:layout_marginRight="4dp"
    android:layout_marginEnd="4dp"
    android:layout_marginBottom="0dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:id="@+id/debt_card_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="2dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:gravity="center|start"
            android:padding="2dp"
            app:srcCompat="@mipmap/logo_caixa"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/debt_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="TÃ­tulo do Boleto"
            android:textSize="18sp"
            android:layout_weight="1"
            android:textColor="@color/md_grey_800"/>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/debt_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|end"
            android:padding="5dp"
            android:layout_marginRight="4dp"
            android:layout_marginEnd="4dp"
            app:srcCompat="@drawable/ic_download"/>

    </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="2dp"
            android:background="@color/md_grey_400"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="4dp"
            android:layout_marginBottom="4dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">

                <me.grantland.widget.AutofitTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Valor"
                    android:textColor="@color/md_grey_600"
                    android:textAlignment="center"
                    android:singleLine="true"
                    android:maxLines="1"
                    autofit:minTextSize="12sp"/>

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/debt_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="000,00"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="@color/md_grey_700"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">

                <me.grantland.widget.AutofitTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Desconto"
                    android:textAlignment="center"
                    android:textColor="@color/md_grey_600"
                    android:singleLine="true"
                    android:maxLines="1"
                    autofit:minTextSize="12sp"/>

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/debt_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="000,00"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="@color/md_grey_700"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">

                <me.grantland.widget.AutofitTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vencimento"
                    android:textAlignment="center"
                    android:textColor="@color/md_grey_600"
                    android:singleLine="true"
                    android:maxLines="1"
                    autofit:minTextSize="12sp"/>

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/debt_expiry_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00/00/00"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="@color/md_grey_700"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">

                <me.grantland.widget.AutofitTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Multa"
                    android:textAlignment="center"
                    android:textColor="@color/md_grey_600"
                    android:singleLine="true"
                    android:maxLines="1"
                    autofit:minTextSize="12sp"/>

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/debt_fine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0,00"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="@color/md_grey_700"/>

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/divider_stroke"
            android:layerType="software"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.gurpster.facapemobile.view.CheckBoxImageView
                android:visibility="visible"
                android:id="@+id/debt_barcode"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:paddingTop="5dp"
                android:paddingBottom="7dp"
                android:scaleType="fitXY"
                app:checked="false"
                app:default_img="@mipmap/barcode_test"/>

            <me.grantland.widget.AutofitTextView
                android:id="@+id/debt_barcode_number"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:paddingStart="5dp"
                android:paddingLeft="5dp"
                android:paddingEnd="5dp"
                android:paddingRight="5dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="Multa"
                android:textAlignment="center"
                android:textColor="@color/md_grey_600"
                android:singleLine="true"
                android:maxLines="1"
                autofit:minTextSize="10sp"/>

        </FrameLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>