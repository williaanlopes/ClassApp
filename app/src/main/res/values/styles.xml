<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/belizeHole</item>
        <item name="colorPrimaryDark">@color/peterRiver</item>
        <item name="colorAccent">@color/belizeHole</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:windowBackground">@color/background_2</item>
        <!--<item name="android:colorForeground">@color/md_black_1000</item>-->
        <!--<item name="android:textColorPrimary">@color/md_grey_800</item>-->
        <!--<item name="android:textColorPrimaryInverse">@color/md_black_1000</item>-->
        <!--<item name="android:colorBackground">@color/white</item>-->
        <!--<item name="android:editTextStyle">@style/CustomEditTextStyle</item>-->
        <!--<item name="preferenceTheme">@style/PreferencesTheme</item>-->
        <item name="searchViewStyle">@style/SearchViewStyle</item>

        <!-- Theme for the Preferences -->
        <item name="preferenceTheme">@style/AppPreferenceTheme</item>

        <!-- Theme for all Alert Dialogs (e.g. from DialogPreference) -->
        <item name="alertDialogTheme">@style/AppAlertDialog</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="colorPrimary">@color/belizeHole</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/md_blue_500</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:windowBackground">@color/background_2</item>
        <!--<item name="preferenceTheme">@style/PreferencesTheme</item>-->

        <item name="searchViewStyle">@style/SearchViewStyle</item>
        <item name="android:textColorHint">@color/white</item>

        <item name="android:spinnerItemStyle">@style/SpinnerItemStyle</item>

        <!-- Theme for the Preferences -->
        <item name="preferenceTheme">@style/AppPreferenceTheme</item>

        <!-- Theme for all Alert Dialogs (e.g. from DialogPreference) -->
        <item name="alertDialogTheme">@style/AppAlertDialog</item>
    </style>

    <style name="AppTheme.WebView" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/peterRiver</item>
        <item name="colorPrimaryDark">@color/belizeHole</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/peterRiver</item>
        <item name="android:textColorSecondary">@color/colorPrimary</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="SettingsTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionMenuTextColor">@color/white</item>
        <item name="colorPrimary">@color/belizeHole</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/belizeHole</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

        <!-- Theme for the Preferences -->
        <item name="preferenceTheme">@style/AppPreferenceTheme</item>

        <!-- Theme for all Alert Dialogs (e.g. from DialogPreference) -->
        <item name="alertDialogTheme">@style/AppAlertDialog</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background" tools:ignore="NewApi">@color/belizeHole</item>
        <item name="background">@color/peterRiver</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimaryDark">@color/md_indigo_700</item>
        <item name="colorPrimary">@color/md_indigo_500</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimaryDark">@color/md_indigo_700</item>
        <item name="colorPrimary">@color/md_indigo_500</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/white</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/white</item>
    </style>

    <style name="CustomEditTextStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@color/belizeHole</item>
        <item name="colorControlActivated">@color/belizeHole</item>
        <item name="colorAccent">@color/belizeHole</item>
        <item name="android:textCursorDrawable">@drawable/custom_cursor</item>
    </style>

    <style name="CustomEditTextStyleWhite" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@color/belizeHole</item>
        <item name="android:textColorHint">@color/belizeHole</item>
        <item name="colorControlActivated">@color/belizeHole</item>
        <item name="colorAccent">@color/belizeHole</item>
        <item name="android:textCursorDrawable">@drawable/custom_cursor</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <!-- Gets rid of the search icon -->
        <item name="searchIcon">@drawable/ic_loupe</item>
        <!--<item name="closeIcon">@drawable/ic_close_default</item>-->
        <!-- Gets rid of the "underline" in the text -->
        <item name="queryBackground">@android:color/transparent</item>
        <!-- Gets rid of the search icon when the SearchView is expanded -->
        <item name="searchHintIcon">@null</item>
        <!-- The hint text that appears when the user has not typed anything -->
        <item name="queryHint">Procurar...</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:colorAccent">@color/white</item>
        <item name="android:textCursorDrawable">@drawable/custom_cursor_white</item>
    </style>

    <style name="SpinnerItemStyle" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.Row" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/md_grey_600</item>
    </style>

    <style name="PreferencesTheme" parent="PreferenceThemeOverlay">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:background">@color/white</item>
        <item name="colorAccent">@color/belizeHole</item>
    </style>

    <!--<style name="AppAlertDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">-->
        <!--&lt;!&ndash; To tint the buttons &ndash;&gt;-->
        <!--<item name="colorAccent">@color/colorAccent</item>-->
    <!--</style>-->

    <!--<style name="AppAlertDialogContent" parent="Theme.AppCompat.DayNight">-->
        <!--&lt;!&ndash; To tint EditText and TimePicker &ndash;&gt;-->
        <!--<item name="colorAccent">@color/colorAccent</item>-->
    <!--</style>-->


    <!-- Custom Preference Theme inherits from the v14 support library Material Theme -->
    <style name="AppPreferenceTheme" parent="@style/PreferenceThemeOverlay.v14.Material">
        <item name="preferenceFragmentCompatStyle">@style/AppPreferenceFragmentCompatStyle</item>
    </style>

    <!-- Custom Style for PreferenceFragmentCompat -->
    <style name="AppPreferenceFragmentCompatStyle" parent="@style/PreferenceFragment.Material">
        <!-- Custom layout for PreferenceFragmentCompat -->
        <item name="android:layout">@layout/pref_screen</item>
        <item name="colorAccent">@color/belizeHole</item>
        <item name="preferenceCategoryStyle">@style/CategoryStyle</item>
    </style>

    <!-- Style for a custom Preference Entry -->
    <style name="AppPreference">
        <item name="android:layout">@layout/preference_material</item>
    </style>

    <!-- Style for a DialogPreference Entry -->
    <style name="AppPreference.DialogPreference">
        <item name="positiveButtonText">@android:string/ok</item>
        <item name="negativeButtonText">@android:string/cancel</item>
    </style>

    <style name="AppAlertDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <!-- To tint the buttons -->
        <item name="colorAccent">@color/belizeHole</item>
    </style>

    <style name="AppAlertDialogContent" parent="Theme.AppCompat.DayNight">
        <!-- To tint EditText and TimePicker -->
        <item name="colorAccent">@color/belizeHole</item>
    </style>

    <style name="CategoryStyle" parent="Preference.Category">
        <item name="android:layout">@layout/pref_category_view</item>
    </style>
</resources>
